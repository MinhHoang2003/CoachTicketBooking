<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:toos="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <RadioButton
        android:id="@+id/radioButtonCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/radioButtonCheck"
        app:layout_constraintStart_toEndOf="@id/radioButtonCheck"
        app:layout_constraintTop_toTopOf="parent"
        toos:text="09:00, Cổng 3 Bến Xe Miền Đông" />

    <View
        android:id="@+id/divier"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#B29C9A9A"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/textPosition"
        app:layout_constraintTop_toBottomOf="@id/textPosition" />

</androidx.constraintlayout.widget.ConstraintLayout>